<%= form_for message, html: {class: "col s12 m12 l12"} do |f| %>
  <%= f.hidden_field :chatroom_id %>
  <div class="input-field col s10 m10 l10">
    <%= f.text_field :body, class: "col s12 m12 l12", autofocus: true %>
  </div>
  <div class="chat-send col s1 m1 l1 left">
    <%= tag.button class: "btn" do %>
      <i class="material-icons" >send</i>
    <% end %>
  </div>
<% end %>
<script>
  document.getElementsByName("message[body]")[0].focus()
</script>